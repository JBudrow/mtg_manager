%nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top{style: 'border-bottom:grey 1px solid;'}
  %button.navbar-toggler{'type': 'button',
                         'data-toggle': 'collapse', 
                         'data-target': '#navbar_toggler',
                         'aria-controls': 'navbar_toggler',
                         'aria-expanded': 'false',
                         'aria-label': 'Toggle navigation'}
    %span.navbar-toggler-icon
  %div
    %span
      %img{src: '/images/mtg_manager.png', style: 'height: 4rem;'} 
    -# %a.navbar-brand{href: '/'} mtg manager 
    .text-shadow-pop-bl#letter-object{onClick: "window.location.href = '/'", style: 'display: inline;'} mtg manager
  %div.collapse.navbar-collapse#navbar_toggler
    %ul.navbar-nav.mr-auto.mt-2.mt-lg-0 
      %li.nav-item.active 
        %a.nav-link{href: '#', style: 'padding-top: 5px;'}
          %span.sr-only (current)
      %li.nav-item
      -if current_user 
        %a.nav-link{href: '/profile', style: 'padding-top: 5px;'}=current_user.email 
        -if current_user.has_cards?
          %span#totality{style: 'padding-top: 5px;color: green;'}=collection_currency
        -else 
          %span{style: 'padding-top: 5px;color: grey;'} (0.00)
        %a.nav-link{href: '/logout', 
                    onMouseover: "this.style.color='red';", 
                    onMouseout: "this.style.color='grey';",
                    style: 'font-size: small;'} LOGOUT 
      -else 
        %a.nav-link{href: '/account', style: 'color: green; font-size: small;'} LOGIN OR SIGNUP 
      %li.nav-item
        %a.nav-link{href: '/cards', style: "font-size: small;"} INVENTORY
      %div{style: 'border-right: 1px lightgrey solid; height: 1em; padding: 12px 2px 20px 0'}
      %li.nav-item
        %a.nav-link{href: '/sets', style: "font-size: small;"} SETS 
      %li.nav-item
        %a.nav-link{href: '/tokens', style: "font-size: small;"} TOKENS 
      %li.nav-item 
        %a.nav-link{href: '/promos', style: "font-size: small;"} PROMOS
      %li.nav-item 
        %a.nav-link{href: '/promos', style: "font-size: small;"} MISC
    %form.form-inline.my-2.my-lg-0{action: "/search", method: 'get'}
      %input.form-control.mr-sm-2{type: 'text', name: 'q', placeholder: "#{scryfall.random['name']}"}
      -# btn-outline-success conflicts with application.js function for increment,
      -# both are looking for the same element class
      %button.btn.btn-outline-primary.my-2.my-sm-0{type: 'submit'}Search